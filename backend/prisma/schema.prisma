generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String
  shop      Shop?     @relation(fields: [shopId], references: [id])
  shopId    Int?      @unique

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Shop {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  acronym     String    @unique
  city        String

  user        User?     
  userId      Int       @unique
  products    Product[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Product {
  id         Int      @id @default(autoincrement())
  shop       Shop?    @relation(fields: [shopId], references: [id])
  shopId     Int      @unique

  bling_id   Int      @unique
  name       String
  code       Int
  price      Float
  stock      Int      @default(0)
  image_url  String

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}